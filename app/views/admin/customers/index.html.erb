<div class="container">
   <div class="row m-4">
     <div class="col">
        <h4>会員一覧</h4>
     </div>
   </div>
   <div class="row">
    <div class="col mx-5">
      <table class="table">
       <thead>
         <tr class="table-active">
        　 <th>会員ID</th>
        　  <th>氏名</th>
        　  <th>メールアドレス</th>
        　  <th>ステータス</th>
         </tr>
         <tbody>
        　 <% @customers.each do |customer| %>
        　  <tr>
          　  <td><%= customer.id %></td>
          　 <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
        　    <td><%= customer.email %></td>
        　    <td>
        　      <% if customer.is_deleted %>
                <p class="text-muted"><strong>退会済</strong></p> 
               <% elsif %>
                <p class="text-success"><strong>有効</strong></p>
               <% end %>
             </td>
        　  </tr>
        　  <% end %>
        　 </tbody>
       </thead>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
      
