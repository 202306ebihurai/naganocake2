<main>
  <h4>会員一覧</h4>
  　<table>
  　  <thead>
  　   <tr>
  　     <th>会員ID</th>
  　     <th>氏名</th>
  　     <th>メールアドレス</th>
  　     <th>ステータス</th>
  　   </tr>
  　   <tbody>
  　    <% @customers.each do |customer| %>
  　     <tr>
    　      <td><%= customer.id %></td>
    　      <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
  　        <td><%= customer.email %></td>
  　        <td>
  　          <% if customer.is_deleted %>
                 退会済
                <% elsif %>
                 有効
             <% end %>
           </td>
  　     </tr>
  　    <% end %>
  　   </tbody>
  　  </thead>
  　</table>
</main>
