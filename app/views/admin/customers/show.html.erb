<main>
  <h5><%= @customer.full_name %>さんの会員詳細</h5>
   <table>
     <thead>
       <tr>
         <th>会員ID</th>
         <td><%= @customer.id %></td>
       </tr>
       <tr>
         <th>氏名</th>
         <td><%= @customer.full_name %></td>
       </tr>
       <tr>
         <th>フリガナ</th>
         <td><%= @customer.full_name_kana %></td>
       </tr>
       <tr>
         <th>郵便番号</th>
         <td><%= @customer.postcode %></td>
       </tr>
       <tr>
         <th>住所</th>
         <td><%= @customer.address %></td>
       </tr>
       <tr>
         <th>電話番号</th>
         <td><%= @customer.phone_number %></td>
       </tr>
       <tr>
         <th>メールアドレス</th>
         <td><%= @customer.email %></td>
       </tr>
       <tr>
         <th>会員ステータス</th>
         <td>
            <% if @customer.is_deleted %>
             退会済
            <% elsif %>
             有効
            <% end %>
           </td>
       </tr>
     </thead>
   </table>
  　 <%= link_to edit_admin_customer_path(@customer) do %> 編集する<% end %>
  　  <%= link_to edit_admin_item_path(@item) do %> 編集する<% end %>
</main>