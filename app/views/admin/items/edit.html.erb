<body>
  <h3>商品編集</h3>
   <thead>
    <%= form_with model:@item, url: admin_item_path do |f| %>
  　    <table>
  　      <th>画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
         <th>商品名</th>
          <td><%= f.text_field :name, placeholder:"商品名" %></td>
       
         <h4>商品説明</h4>
         <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
       
         <h4>ジャンル</h4>
         
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" ) %>
         
         <h4>税抜価格</h4>
         <%= f.text_field :price, placeholder:"1000" %>円
       
         <h4>販売ステータス</h4>
         <%= f.radio_button :is_active, "true" %>　販売中
         <%= f.radio_button :is_active, "false" %>　販売停止
  　    </table>
  　  <% end %>
   </thead>
</body>