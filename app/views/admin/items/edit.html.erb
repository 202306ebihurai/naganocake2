 <div class="container">
  <div class="row m-4">
   <div class="col-2"></div>
   <div class="col-3">
    <h4>商品編集</h4>
   </div>
  </div>
  <div class="row">
   <div class="col-2"></div>
   <div class="col-6">
     <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
     <table class="table table-borderless">
        <tbody>
           <tr>
            <td>画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
           </th>
           <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, class:"form-control" %></td>
           </tr>
           <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, class:"form-control" %></td>
           </tr>
           <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
           </tr>
           <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price, class:"form-control" %></td>
            <td>円<td>
           </tr>
           <tr>
            <td>販売ステータス</td>
            <td>
             <%= f.radio_button :is_active, "true" %>販売中
             <%= f.radio_button :is_active, "false" %>販売停止中
            </td>
           </tr>
           <tr>
            <th></th>
            <td><%= f.submit '変更を保存', class:"btn btn-outline-success" %></td>
           </tr>
       </tbody>
     </table>
     <% end %>
    </div>
   </div>
 </div>
    
   

