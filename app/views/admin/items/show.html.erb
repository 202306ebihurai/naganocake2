<div class="container">
  <div class="row m-4">
   <div class="col">
    <h4>商品詳細</h4>
   </div>
  </div>
   <div class="row m-4">
    <div class="col-5">
     <%= image_tag @item.get_image(300,250)%>
    </div>
     <div class="col-5">
         <table class="table  table-borderless">
           <tr>
             <td>商品名</td>
             <td><%= @item.name %></td>
           </tr>
           <tr>
             <td>商品説明</td>
             <td><%= @item.introduction %></td>
           </tr>
           <tr>
             <td>ジャンル</td>
             <td><%= @item.genre.name %></td>
           </tr>
           <tr>
             <td>税込価格<br>(税抜価格)</td>
             <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited)%>)円</td>
           </tr>
           <tr>
             <td>販売ステータス</td>
             <td>
              <% if @item.is_active %>
               <p class="text-success"><strong>販売中</strong></p>
              <% elsif %>
               <p class="text-muted"><strong>販売停止</strong></p>
              <% end %>
             </td>
           </tr>
         </table>
         <%= link_to edit_admin_item_path(@item), class:"btn btn-outline-success" do %> 編集する<% end %>
     </div>
  </div>
</div>