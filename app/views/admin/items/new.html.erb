
 <h3>商品新規登録</h3>

  <table>
   <thead>
    <tbody>
      <%= form_with model:@item, url: admin_items_path do |f| %>
        <tr>
         <th>画像</th>
         <td><%= f.file_field :image, accept: "image/*" %></td>
        </th>
        <tr>
         <th>商品名</th>
         <td><%= f.text_field :name, placeholder:"商品名" %></td>
        </tr>
        <tr>
         <th>商品説明</th>
         <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></td>
        </tr>
        <tr>
         <th>ジャンル</th>
         <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" ) %></td>
        </tr>
        <tr>
         <th>税抜価格</th>
         <td><%= f.text_field :price, placeholder:"1000" %>円</td>
        </tr>
        <tr>
         <th>販売ステータス</th>
         <td><%= f.radio_button :is_active, "true" %>　販売中
             <%= f.radio_button :is_active, "false" %>　販売停止中</td>
        </tr>
        <tr>
         <th></th>
         <td><%= f.submit '新規投稿' %></td>
        </tr>
      <% end %>
    </tbody>
   </thead>
  </table>

