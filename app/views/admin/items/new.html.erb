 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>商品新規登録</h3>
     <table class="table table-borderless">
      <thead>
       <tbody>
         <%= form_with model:@item, url: admin_items_path do |f| %>
           <tr>
            <td>画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
           </th>
           <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, placeholder:"商品名", class:"form-control" %></td>
           </tr>
           <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します", class:"form-control" %></td>
           </tr>
           <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" ) %></td>
           </tr>
           <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price, placeholder:"1000", class:"form-control" %>円</td>
           </tr>
           <tr>
            <td>販売ステータス</td>
            <td><%= f.radio_button :is_active, "true" %>販売中  
                <%= f.radio_button :is_active, "false" %>販売停止中</td>
           </tr>
           <tr>
            <td></td>
            <td><%= f.submit ' 新規投稿 ', class:"btn btn-outline-success" %></td>
           </tr>
         <% end %>
       </tbody>
      </thead>
     </table>
   </div>
  </div>
 </div>

 

