 <div class="container m-7">
   <div class="row">
     <div class="col-auto">
       <h3 class ="bg-light">商品一覧</h3>
     </div>
     <div class="col-">
       <%= link_to "新規登録", new_admin_item_path %>
     </div>
   </div>
    <div class="row">
   　<table class="table">
       <thead>
         <tr class="table-active">
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </tr>
         <tbody>
           <% @items.each do |item| %>
           <tr>
             <td><%= item.id %></td>
             <td><%= link_to item.name, admin_item_path(item) %> </td>
             <td><%= item.price %></td>
             <td><%= item.genre.name%></td>
             <td>
              <% if item.is_active %>
               <p class="text-success"><strong>販売中</strong></p>
              <% elsif %>
               <p class="text-muted"><strong>販売停止</strong></p>
              <% end %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </thead>
      </table>
      <%= paginate @items %>
   </div>
 </div>
