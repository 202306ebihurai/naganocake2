<main>
  <h5>注文詳細</h5>
  <table>
    <thred>
      <tr>
        <th>購入者</th>
        <td>
         <%= link_to @customer.full_name, admin_customer_path(@customer) %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postcode %> <%= @order.address %>
           <br><%= @order.receiver %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
           <%= form_with model:@order, url: admin_order_path(@order), method: :patch do |f| %>
               <%= f.select :status, Order.statuses.keys.map {|k| [k]} %>
              <%= f.submit '更新' %>
           <% end %>
        </td>
      </tr>
    </thred>
  </table>
  
  <!--画面下商品詳細-->
  
  <table>
    <thred>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
        <th></th>
      </tr>
      <tr>
        <td><%= %></td>
      </tr>
    </thred>
  </table>
</main>