 <div class="container m-4 ">
   <div class="row">
    <div class="col-1"></div>
     <div class="col-3">
       <h4>ジャンル一覧・追加</h4>
     </div>
   </div>
     <div class="row">
      <div class="col-8 m-4">
      <%= form_with model:@genre_new, url: admin_genres_path do |f| %>
       <table class="table table-borderless">
             <tr>
              <td>ジャンル名</td>
              <td><%= f.text_field :name, placeholder:"ジャンル名" %></td>
              <td><%= f.submit '　新規登録　', class:"btn btn-outline-dark" %></td>
             </tr>
        </table>
       <% end %>
      </div>
     </div>
      <div class="row">
        <div class="col-md-4">
          <table class="table">
           <thead>
             <tr class="table-active">
               <th>ジャンル</th>
               <th></th>
             </tr>
             <tbody>
               <% @genres.each do |genre| %>
               <tr>
                 <td><%= genre.name %></td>
                 <td><%= link_to edit_admin_genre_path(genre), class:"btn btn-outline-success" do %> 編集する</td><% end %>
               </tr>
               <% end %>
             </tbody>
           </thead>
          </table>
        </div>
       </div>
  </div>
