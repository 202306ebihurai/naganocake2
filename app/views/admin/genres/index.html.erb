<main>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-6">
     <h5>ジャンル一覧・追加</h5>
    </div>
   </div>
      <h6>ジャンル名</h6>
        <%= form_with model:@genre_new, url: admin_genres_path do |f| %>
         <%= f.text_field :name %>
         <%= f.submit '新規登録', class:"btn btn-outline-dark" %>
        <% end %>
        <div class="col-md-4">
          <table class="table">
           <thead>
             <tr>
               <th class="table-active">ジャンル</th>
               <th class="table-active"></th>
             </tr>
             <tbody>
               <% @genres.each do |genre| %>
               <tr>
                 <td><%= genre.name %></td>
                 <td><%= link_to edit_admin_genre_path(genre), class:"btn btn-outline-success" do %> 編集する</td><% end %>
               </tr>
               <% end %>
             </tbody>
           </thead>
          </table>
        </div>
  </div>
</main>