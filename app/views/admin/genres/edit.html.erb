   <div class="container m-4 ">
    <div class="row">
     <div class="col-1"></div>
      <div class="col-3">
        <h4>ジャンル編集</h4>
      </div>
    </div>
    <div class="row">
     <div class="col-8 m-4">
      <%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch do |f| %>
       <table class="table table-borderless">
           <tbody>
             <tr>
             <th>ジャンル名</th>
             <td><%= f.text_field :name %></td>
             <td><%= f.submit '変更を保存', class:"btn btn-outline-success" %></td>
             </tr>
           </tbody>
       </table>
       <% end %>
      </div>
     </div>
   </div>

