<h2>注文履歴一覧</h2>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>商品名</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.address %><br>
          <%= order.receiver %>

        </td>
        <td>
          <% order.items.each do |item| %>
            <%= item.name %><br>
          <% end %>
        </td>
        <td><%= order.total_amount.to_s(:delimited) %>円</td>
        <td><%= Order.statuses_i18n[order.status] %></td>
        <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= paginate @orders %>
</div>