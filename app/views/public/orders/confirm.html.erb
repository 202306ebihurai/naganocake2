<h2>注文情報確認</h2>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <tr>
    <td>商品名</td>
    <td>単価(税込)</td>
    <td>数量</td>
    <td>小計</td>
  </tr>

</table>

<!-- 注文情報の確認用のフォームを作成 -->
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <table>
    <tr>
      <th>支払方法: </th>
      <td>
        <%= @order.payment_method %>
      </td>
    </tr>
    <tr>
      <th>お届け先: </th>
      <td>
        <%= @order.postcode + @order.address %><br>
        <%= @order.receiver %>
      </td>
    </tr>

  </table>

  <%= f.submit "注文を確定する" %>

<% end %>