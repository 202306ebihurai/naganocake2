<p class="notice"><%= flash[:notice] %></p>
<h2>配送先登録/一覧</h2>

<%= form_with model: Address.new, url: addresses_path, method: :post do |f| %>
  <div>郵便番号(ハイフンなし)<%= f.text_field :postcode %></div>
  <div>住所<%= f.text_field :address %></div>
  <div>宛名<%= f.text_field :receiver %></div>
  <div><%= f.submit "新規登録" %></div>
  <p class="notice"><%= flash[:alert] %></p>
<% end %>

<table class='table table-hover table-inverse'>
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.receiver %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する", address_path(address), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>