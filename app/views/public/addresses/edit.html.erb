<div class="container px-5 px-sm-0">
  <div class="row">
    <div class ="col-md-12 mt-5">

      <h3 class="ml-4 bg-light", style="display: inline;">配送先編集</h3>

<%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
  <div class="row mt-4">
    <div class="col-md-8">
      <table>
        <tr>
          <div calss="form-group">
            <td><%= f.label :postcode, "郵便番号(ハイフンなし)",class: "text-nowrap" %></td>
            <td><%= f.text_field :postcode, class: "form-control w-50" %></td>
          </div>
        </tr>
        <tr>
          <div calss="form-group">
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address, class: "form-control", size: 100 %></td>
          </div>
        </tr>
        <tr>
          <div calss="form-group">
            <td><%= f.label :receiver, "宛名" %></td>
            <td><%= f.text_field :receiver, class: "form-control w-50" %></td>
          </div>
        </tr>
      </table>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm" %>
    </div>
    <p class="notice"><%= flash[:alert] %></p>
  </div>
<% end %>