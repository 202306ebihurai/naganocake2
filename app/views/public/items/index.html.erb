<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-2 mt-5">
      <table class="table table-bordered table-hover table-sm">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genre.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-10 mt-5">
      <div class="topic-title">
        <h2>商品一覧(全<%= @items_all.count %>件)</h2>
      </div>
      <div class="item-box d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="mt-2 mr-2">
            <p class="break-word">
              <%= link_to item_path(item) do %>
                <%= image_tag 'no_image', width: "200px", class: "border" %>
              <% end %>
            </p>
            <p class="text-break"><%= item.name %></p>
            <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>

      <div>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>