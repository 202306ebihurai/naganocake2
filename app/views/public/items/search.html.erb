<div class="container px-5 px-sm-0">
  <div class="row">
    <div>
      <h4>「<%= params[:word] %>」の検索結果 (全<%= @items.count %>件)</h4>
    </div>
    <table class='table table-bordered table-hover table-sm'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>紹介</th>
          <th>単価(税込)</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_image, width: "200px" %><br>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.introduction %>
            </td>
            <td>
              ¥<%= item.with_tax_price.to_s(:delimited) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>