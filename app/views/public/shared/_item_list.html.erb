      <div class="item-list row">
        <% @items.each do |item| %>
          <div class="card col-md-3 w-100 border-0">
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_image(300,300), class: "card-img-top" %>
            <% end %>
            <div class="mx-2">
              <h6><%= item.name %></h6>
              <p>¥<%= item.with_tax_price.to_s(:delimited) %>(税込)</p>
            </div>
          </div>
        <% end %>
      </div>